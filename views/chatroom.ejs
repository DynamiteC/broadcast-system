<%- include header %>
<div class="container">
    <div class="center-align white-text">
        <div class="row">
            <div class="col s7">
                <h5>User: <span id="username">
                        <%= username %></span></h5>
            </div>
            <div class="col s5">
                <button class="btn btn-flat waves-effect waves-orange white-text inFont" id="sign-out" type="submit"
                    name="action">Sign out <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </div>
        <div class="chat">
            <div class="row">
                <div class="col s7">
                    <div class="card black white-text">
                        <div class="card-title">Broadcast Messages</div>
                        <div class="card-content white-text">
                            <div id="broadcast_msgs" class="messages input-field left-align inFont"></div>
                            <textarea name="message" id="brd_message" class="white-text" rows="5" placeholder="Enter your message..."></textarea><br /><br />
                            <button id="send_brdcst_msg" data-username="<%= username %>" class="btn btn-flat waves-effect waves-orange white-text inFont"
                                type="submit" name="action">Send Broadcast <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col s5">
                    <div class="card black white-text">
                        <div class="card-title">Private Messages</div>
                        <div class="card-content white-text">
                            <div id='private_msgs' class="messages input-field left-align inFont"></div>
                            <div class="input-field col s12 valign-middle">
                                <textarea name="message" id="prv_message" class="white-text" rows="5" placeholder="Enter your message..."></textarea><br /><br />
                                <div class="row">
                                    <div class="col s9">
                                        <div class="col s4"><span>Recipients</span></div>
                                        <div class="col s8">
                                            <select id="recipients" style="display: inline-block;height:30px">
                                                <% for (var x = 0; x < recipients.length; x++) { %>
                                                    <% if (recipients[x].trim() != username) {%>
                                                        <option value="<%= recipients[x].trim() %>">
                                                            <%= recipients[x].trim() %>
                                                        </option>
                                                    <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col s3">
                                        <button id="send_private_msg" data-username="<%= username %>" class="btn btn-flat btn-floating waves-effect waves-orange white-text inFont"
                                            type="submit" name="action"><i class="fas fa-paper-plane"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include footer %>